<h1> Select where your bike was stolen from</h1>
<ul>
  <% @locations.each do |location| %>
    <li><a href="/<%=location.id %>/new-bike"><%= location.neighborhood.capitalize %></a></li>
  <% end %>
</ul>

<form action="/locations/" method="post">

  <label for= "locations">Different Neighborhood?</label>
  <br>
  <input id ="locations" name ="location[neighborhood]" type="text" value="Portland" required>
  <button>Add Neighborhood</button>
</form>

